<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>sign-up Page</title>
  <link rel="stylesheet" href="sign-up.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="stylesheet" href="toast.css">
</head>
<body>
  <div class="login-container">
    <form id="login-form" , action="/sign-up" , method="post">
      <h1 style="color: rgb(255, 255, 255);text-shadow: 1px 1px 0px black, -1px -1px 0px black, 1px -1px 0px black, -1px 1px 0px black;">Fix <span style="color: orange;text-shadow: none;">Buddy</span></h1>
      
      <!-- Username Block -->
      <div class="input-group">

        <label for="name">Name:</label>
        <input type="name" id="name" name="name" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      
      </div>
      
     <div class="err">
        <% if (typeof error !== "undefined" && error) { %>
          <p style="color: rgb(255, 83, 83);"><%= error %></p>
        <% } %>
      </div>

      <!-- Submit Button -->
      <button class="sign-up" type="submit">Sign-up</button>
      
      <div class="login">Already have an account? </div>
      <a href="http://localhost:3000/login">log in</a>

    <% if (typeof success !== "undefined" && success) { %>
        <script src="toast.js"></script>
        <script>
            toast.success('Success', '<%= success %>');
        </script>
    <% } %>


    </form>
  </div>


</body>
</html>
